<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monthly_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivanikaushal.brokemanagerapp.MonthlyIncome">

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnback"
        android:layout_alignTop="@+id/btnext"
        android:layout_alignLeft="@+id/tvwel"
        android:layout_alignStart="@+id/tvwel"
        android:textSize="25sp" />

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/btnext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:textSize="25sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etincome"
        android:textSize="20sp"
        android:hint="enter income here"
        android:layout_above="@+id/btnback"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp" />

    <TextView
        android:text="Income :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvincome"
        android:layout_marginLeft="6dp"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/etincome"
        android:layout_alignBottom="@+id/etincome"
        android:layout_toStartOf="@+id/etincome"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="WELCOME : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:id="@+id/tvwel"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvincome" />

    <TextView
        android:text="TIME PERIOD :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtp"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/tvwel"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtp"
        android:layout_alignParentStart="true">
    <RadioButton
        android:text="DAILY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/rbday"
        android:layout_below="@+id/tvtp"
        android:textSize="20sp" />

    <RadioButton
        android:text="WEEKLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/rbweek"
        android:layout_below="@+id/rbday"
        android:layout_alignLeft="@+id/rbday"
        android:layout_alignStart="@+id/rbday"
        android:textSize="20sp" />

        <RadioButton
            android:text="MONTHLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rbmonth"
            android:layout_below="@+id/rbweek"
            android:layout_alignLeft="@+id/rbweek"
            android:layout_alignStart="@+id/rbweek"
            android:textSize="20sp" />
    </RadioGroup>


</RelativeLayout>
