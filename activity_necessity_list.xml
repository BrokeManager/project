<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_necessity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivanikaushal.brokemanagerapp.NecessityList">

    <TextView
        android:text="ABSOLUTE NECESSITIES."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/textView3"
        android:textSize="20sp" />

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/other1"
        android:layout_marginBottom="16dp"
        android:id="@+id/nextne" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextne"
        android:layout_alignEnd="@+id/healthcare1"
        android:id="@+id/backne" />

    <CheckBox
        android:text="OTHER "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other1"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/healthcare1"
        android:layout_alignBottom="@+id/healthcare1"
        android:layout_alignStart="@+id/household1" />

    <CheckBox
        android:text="ENTERTAINMENT "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entertainment1"
        android:layout_marginBottom="38dp"
        android:textSize="18sp"
        android:layout_above="@+id/transport1"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="TRANSPORT "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transport1"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="HEALTH CARE "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/healthcare1"
        android:textSize="18sp"
        android:layout_below="@+id/transport1"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="HOUSEHOLD "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/household1"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/transport1"
        android:layout_alignBottom="@+id/transport1"
        android:layout_alignEnd="@+id/shopping1" />

    <CheckBox
        android:text="WORK/COLLEGE "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wolege1"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/entertainment1"
        android:layout_alignBottom="@+id/entertainment1"
        android:layout_alignStart="@+id/household1" />

    <CheckBox
        android:text="SHOPPING "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping1"
        android:textSize="18sp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/entertainment1"
        android:layout_marginTop="26dp" />

    <CheckBox
        android:text="FOOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food1"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/shopping1"
        android:layout_alignBottom="@+id/shopping1"
        android:layout_alignParentStart="true" />
</RelativeLayout>
