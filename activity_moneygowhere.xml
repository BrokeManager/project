<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_moneygowhere"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivanikaushal.brokemanagerapp.Moneygowhere">

    <TextView
        android:text="WHERE DOES YOUR MONEY GO?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/tvnecessity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <CheckBox
        android:text="TRANSPORT "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/cbentertainment"
        android:id="@+id/cbtransport"
        android:textSize="18sp" />

    <CheckBox
        android:text="HEALTH CARE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/cbhealthcare"
        android:layout_below="@+id/cbtransport"
        android:layout_alignStart="@+id/cbtransport"
        android:textSize="18sp" />

    <CheckBox
        android:text="SHOPPING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbfood"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:id="@+id/cbshopping"
        android:textSize="18sp" />

    <CheckBox
        android:text="HOUSEHOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbhealthcare"
        android:layout_alignStart="@+id/cbworkcollege"
        android:id="@+id/cbhousehold"
        android:textSize="18sp" />

    <CheckBox
        android:text="ENTERTAINMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/cbentertainment"
        android:textSize="18sp"
        android:layout_below="@+id/cbfood"
        android:layout_alignStart="@+id/cbfood" />

    <CheckBox
        android:text="WORK/COLLEGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbworkcollege"
        android:layout_alignTop="@+id/cbentertainment"
        android:layout_alignStart="@+id/cbshopping"
        android:textSize="18sp" />

    <CheckBox
        android:text="OTHER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbother"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/cbhealthcare"
        android:layout_alignBottom="@+id/cbhealthcare"
        android:layout_alignStart="@+id/cbhousehold" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnback2"
        android:layout_alignBaseline="@+id/btnnext2"
        android:layout_alignBottom="@+id/btnnext2"
        android:layout_alignEnd="@+id/cbtransport"
        android:textSize="25sp" />

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:id="@+id/btnnext2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cbother"
        android:layout_marginStart="15dp"
        android:textSize="25sp" />

    <CheckBox
        android:text="FOOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/cbfood"
        android:textSize="18sp"
        android:layout_below="@+id/tvnecessity"
        android:layout_alignParentStart="true" />
</RelativeLayout>
